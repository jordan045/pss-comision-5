// ---------------------------------------------------
// 1. Configuración Base
// ---------------------------------------------------
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ---------------------------------------------------
// 2. Modelos de Autenticación y Roles
// ---------------------------------------------------
model Usuario {
  id                Int             @id @default(autoincrement())
  nombre            String
  apellido          String
  dni               String          @unique
  cuil              String?         @unique
  direccion         String?
  email             String          @unique
  password          String
  rol               Rol             @default(ALUMNO)
  activo            Boolean         @default(true)
  passwordChangedAt DateTime        @default(now())
  passwordResets    PasswordReset[]

  // ---- Atributos específicos según el rol ----
  // Rol = ALUMNO
  legajo            String?         @unique
  fechaIngreso      DateTime?

  // Rol = PROFESOR
  tituloProfesional String?
  antiguedad        Int?

  // Rol = ADMINISTRATIVO
  obraSocial        String?

  // ---- Relaciones ----
  inscripciones           InscripcionCarrera[]
  cursadasDictadas        Cursada[]                 @relation("DocentePrincipal")     // Cursadas donde es docente principal
  cursadasComoDocente     Cursada[]                 @relation("DocentesAdicionales")  // Cursadas donde participa como docente adicional
  inscripcionesCursada    InscripcionCursada[]      
  mesasExamenDocente      MesaExamen[]              @relation("DocentesMesaExamen") // Mesas de examen donde es docente responsable
  inscripcionesMesaExamen InscripcionMesaExamen[] // Relación con Inscripciones a Mesas de Examen
}

model PasswordReset {
  id        Int      @id @default(autoincrement())
  userId    Int
  token     String   @unique
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  usuario Usuario @relation(fields: [userId], references: [id])
}

enum Rol {
  ALUMNO
  PROFESOR
  ADMINISTRATIVO
}

// ---------------------------------------------------
// 3. Modelos Académicos
// ---------------------------------------------------
model Carrera {
  id                Int      @id @default(autoincrement())
  codigo            String   @unique
  nombre            String   @unique
  titulo            String
  nivelAcademico    String
  duracionAnios     Int
  facultad          String
  estado            String   @default("ACTIVA")
  fechaCreacion     DateTime @default(now())
  fechaModificacion DateTime @updatedAt
 
  // --- Relaciones ---
  // Una carrera pertenece a un único plan de estudio
  planDeEstudioId Int
  planDeEstudio   PlanDeEstudio @relation(fields: [planDeEstudioId], references: [id])
  inscripciones InscripcionCarrera[]
}

model PlanDeEstudio {
  id                Int      @id @default(autoincrement())
  codigo            String   @unique
  nombre            String
  version           String
  fechaVigencia     DateTime
  estado            String   @default("VIGENTE")
  fechaCreacion     DateTime @default(now())
  fechaModificacion DateTime @updatedAt

  // --- Relaciones ---
  carreras      Carrera[] // Lista de carreras que usan este plan
  materias      MateriaPlan[] // Lista de materias en este plan
  inscripciones InscripcionCarrera[]
  cursadas      Cursada[] // Relación con cursadas
}

model Materia {
  id                Int      @id @default(autoincrement())
  codigo            String   @unique
  nombre            String   @unique
  creditos          Int
  cargaHoraria      Int
  descripcion       String?
  estado            String   @default("ACTIVA")
  fechaCreacion     DateTime @default(now())
  fechaModificacion DateTime @updatedAt

  planes            MateriaPlan[]
  correlativas      MateriaPlan[] @relation("Correlativas")
  cursadas          Cursada[]
}

// ---------------------------------------------------
// 4. Inscripciones
// ---------------------------------------------------
model InscripcionCarrera {
  id                Int                       @id @default(autoincrement())
  usuarioId         Int
  carreraId         Int
  planDeEstudioId   Int
  fechaInscripcion  DateTime                  @default(now())
  estado            EstadoInscripcion         @default(ACTIVA)
  modalidad         ModalidadInscripcion      @default(INSCRIPCION_POR_ALUMNO)

  usuario     Usuario       @relation(fields: [usuarioId], references: [id])
  carrera     Carrera       @relation(fields: [carreraId], references: [id])
  plan        PlanDeEstudio @relation(fields: [planDeEstudioId], references: [id])

  @@unique([usuarioId, carreraId])
}

enum EstadoInscripcion {
  ACTIVA
  INACTIVA
}

enum ModalidadInscripcion {
  INSCRIPCION_POR_ALUMNO
  INSCRIPCION_POR_ADMINISTRATIVO
}

// ---------------------------------------------------
// 5. Tablas Intermedias
// ---------------------------------------------------
model MateriaPlan {
  materiaId           Int
  planDeEstudioId     Int
  tipo                String  // 'Obligatoria', 'Optativa'
  correlativaId       Int?    // ID de la materia correlativa (opcional)
  tipoCorrelatividad  String? // 'APROBADA', 'REGULAR', 'CURSADA'

  materia             Materia        @relation(fields: [materiaId], references: [id])
  planDeEstudio       PlanDeEstudio  @relation(fields: [planDeEstudioId], references: [id])
  correlativa         Materia?       @relation("Correlativas", fields: [correlativaId], references: [id])

  @@id([materiaId, planDeEstudioId])
  @@index([correlativaId])
}

// ---------------------------------------------------
// 6. Modelo: Cursada (modificado según aclaración)
// ---------------------------------------------------
model Cursada {
  id                  Int              @id @default(autoincrement())
  materiaId           Int
  planDeEstudioId     Int
  docentePrincipalId  Int
  cuatrimestre        Cuatrimestre
  anio                Int
  cupoMaximo          Int
  cupoActual          Int              @default(0)
  estado              EstadoCursada    @default(ACTIVA)
  observaciones       String?

  // Relaciones
  materia             Materia          @relation(fields: [materiaId], references: [id])
  planDeEstudio       PlanDeEstudio    @relation(fields: [planDeEstudioId], references: [id])
  docentePrincipal    Usuario          @relation("DocentePrincipal", fields: [docentePrincipalId], references: [id])
  docentesAdicionales Usuario[]        @relation("DocentesAdicionales")
  inscripciones       InscripcionCursada[]
  mesasExamen         MesaExamen[]

  fechaCreacion       DateTime         @default(now())
  fechaModificacion   DateTime         @updatedAt

  // Restricción: no pueden existir dos cursadas activas con mismo docente principal, materia y cuatrimestre
  @@unique([materiaId, docentePrincipalId, cuatrimestre, anio], name: "cursada_unica_docente")
}

// ---------------------------------------------------
// 7. Enums Nuevos
// ---------------------------------------------------
enum Cuatrimestre {
  PRIMERO
  SEGUNDO
}

enum EstadoCursada {
  ACTIVA
  CERRADA
  CANCELADA
}

// ---------------------------------------------------
// 8. Inscripción a Cursadas
// ---------------------------------------------------
model InscripcionCursada {
  id                 Int                        @id @default(autoincrement())
  usuarioId          Int
  cursadaId          Int
  fechaInscripcion   DateTime                   @default(now())
  estado             EstadoInscripcionCursada   @default(ACTIVA)
  modalidad          ModalidadInscripcion       @default(INSCRIPCION_POR_ALUMNO)
  resultadoFinal     ResultadoFinal             @default(PENDIENTE)

  // Relaciones
  usuario            Usuario        @relation(fields: [usuarioId], references: [id])
  cursada            Cursada        @relation(fields: [cursadaId], references: [id])

  @@unique([usuarioId, cursadaId])
  @@index([usuarioId])
  @@index([cursadaId])
}

enum EstadoInscripcionCursada {
  ACTIVA
  BAJA
  FINALIZADA
}

enum ResultadoFinal {
  APROBADO
  DESAPROBADO
  PENDIENTE
}

// ---------------------------------------------------
// 9. Mesas de Examen
// ---------------------------------------------------
model MesaExamen {
  id                Int      @id @default(autoincrement())
  cursadaId         Int
  fecha             DateTime
  aula              String
  cierreInscripcion DateTime
  estado            EstadoMesaExamen @default(ACTIVA)
  cupoMaximo        Int?
  libro             String?
  folio             String?
  observaciones     String?

  // Relaciones
  cursada           Cursada                 @relation(fields: [cursadaId], references: [id])
  docentes          Usuario[]               @relation("DocentesMesaExamen")
  inscripciones     InscripcionMesaExamen[]

  fechaCreacion     DateTime @default(now())
  fechaModificacion DateTime @updatedAt

  @@index([cursadaId])
}

model InscripcionMesaExamen {
  id               Int                     @id @default(autoincrement())
  usuarioId       Int
  mesaExamenId    Int
  fechaInscripcion DateTime @default(now())
  nota            Int?
  estado          EstadoInscripcionExamen @default(INSCRIPTO)
  observaciones   String?

  // Relaciones
  usuario          Usuario    @relation(fields: [usuarioId], references: [id])
  mesaExamen       MesaExamen @relation(fields: [mesaExamenId], references: [id])

  @@unique([usuarioId, mesaExamenId])
  @@index([usuarioId])
  @@index([mesaExamenId])
}

enum EstadoMesaExamen {
  ACTIVA
  CERRADA
  CANCELADA
}

enum EstadoInscripcionExamen {
  INSCRIPTO
  APROBADO
  DESAPROBADO
  AUSENTE
}
